<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OtServ RPG</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/search.css" />



    <link rel="shortcut icon" href="~/img/logo4.ico" />
</head>
<body>
    <header>
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/img/2.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/3.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/img/4.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OtServ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown active">
                        <a class="nav-link dropdown-toggle" href=@Url.Action("index", "ranking") id="dropdown09" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Ranking</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown09">
                            <a class="dropdown-item" href="@Url.Action("index", "ranking")">Level</a>
                            <a class="dropdown-item" href="@Url.Action("Magic", "ranking")">Magic Level</a>
                            <a class="dropdown-item" href="@Url.Action("Skill", "ranking")">First Fighting</a>
                            <a class="dropdown-item" href="@Url.Action("Skill", "ranking", new { skill = 1})">Club Fighting</a>
                            <a class="dropdown-item" href="@Url.Action("Skill", "ranking", new { skill = 2})">Sword Fighting</a>
                            <a class="dropdown-item" href="@Url.Action("Skill", "ranking", new { skill = 3})">Axe Fighting</a>
                            <a class="dropdown-item" href="@Url.Action("Skill", "ranking", new { skill = 4})">Distance Fighting</a>
                            <a class="dropdown-item" href="@Url.Action("Skill", "ranking", new { skill = 5})">Shielding</a>
                            <a class="dropdown-item" href="@Url.Action("Frags", "ranking")">Frags</a>
                        </div>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Player" asp-action="ListarMortes">Lista de Mortes <span class="sr-only">(current)</span></a>

                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Guilds" asp-action="Index"> Lista de Guilds <span class="sr-only">(current)</span></a>

                    </li>
                </ul>
                <div class="form-inline my-0 my-lg-0">
                    <input class="form-control mr-sm-2 search-input" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light my-2 search" type="submit">Search</button>
                </div>
                @{
                    var loginAceito = TempData["_IsLoginValid"];
                    if (loginAceito != null && loginAceito.Equals("_IsLoginValid"))
                    {
                        <a class="btn btn-danger my-2 my-sm-0 painel" href="@Url.ActionLink("Painel", "Account")">Painel</a>
                    }
                    else
                    {
                        <button class="btn btn-danger  my-2 my-sm-0 login">Login</button>
                    }
                    TempData.Keep("_IsLoginValid");
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="h-100 p-5 body-context">
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

    </div>

    <div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">

    </div>

    <footer class="border-top footer text-light bg-primary">
        <div class="container">
            &copy; 2020 - OtServ RPG 
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            $(".search").click(function () {
                var name = $(".search-input").val();
                $("#modal").load("Player/searchByName?name=" + name.replace(" ", "%20"), function (response, status, xhr) {
                    console.log(status)
                    if (status === "success") {
                        $("#modal").modal("show");
                    }
                })
            });
        })
        $(function () {
            $(".login").click(function () {
                $("#modal-login").load("Login", function () {
                    $("#modal-login").modal("show");
                })
            });
        })
        var target = $('nav');
        var targetHeight = target.outerHeight();

        $(document).scroll(function (e) {
            var scrollPercent = (targetHeight - window.scrollY) / targetHeight;
            if (scrollPercent < 0) {
                target.css('opacity', 0.7);
                target.removeClass('bg-primary').addClass('bg-dark')

            }
            if (scrollPercent >= 0) {
                target.css('opacity', 1);
                target.removeClass('bg-dark').addClass('bg-primary')
            }
        });
    </script>

</body>
</html>
