@model IEnumerable<OTServer.UI.MVC.Models.DTOKills>

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">
                Lista de Kills
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <table class="table">
                <tbody>
                    @{
                        int count = 0;
                        foreach (var item in Model)
                        {
                            string estilo = count % 2 == 0 ? "background-color:#CFFCF0" : "";
                            <tr style="@estilo">
                                <td>
                                    Matou @item.Name Level @item.Level em @{string tempo = new DateTime(1970, 1, 1, 0, 0, 0, 0).AddSeconds(item.Time).ToString("dd/MM/yyy hh:MM:ss").Replace(" ", " as ");} @tempo
                                </td>

                                <td></td>

                                </tr>
                                count++;
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>

