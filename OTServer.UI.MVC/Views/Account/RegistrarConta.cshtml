@model OTServer.UI.MVC.Models.DTOCreateAccount

@{
    ViewData["Title"] = "RegistrarConta";
}

<link rel="stylesheet" href="~/css/registro.css" />

@{
    var erro = TempData["ErroMessage"] as string;
    if (erro != null)
    {
        <div class="alert alert-danger" role="alert">
           @erro
        </div>
    }
}

<div class="container-fluid">
    <div class="container">
        <div class="form-control-file">
            <form asp-action="RegistrarConta">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-12 mb-4 justify-content-center text-center">
                        <h1>Criar Account</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBox ">
                            <div class="inputText">Account</div>
                            <input asp-for="AccountNumber" class="input" required></input>
                            <span asp-validation-for="AccountNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="inputBox">
                            <div class="inputText">Senha</div>
                            <input asp-for="Pass" class="input" required></input>
                            <span asp-validation-for="Pass" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="inputBox">
                            <div class="inputText">Nome</div>
                            <input asp-for="Nome" class="input" required></input>
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="inputBox">
                            <div class="inputText">Localização</div>
                            <input asp-for="Localizacao" class="input" required></input>
                            <span asp-validation-for="Localizacao" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="inputBox">
                            <div class="inputText">Email</div>
                            <input asp-for="Email" class="input" required></input>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <input type="submit" name="" class="button" value="Cadastrar">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".input").val("");
        });
        $(".input").focus(function () {
            $(this).parent().addClass("focus");
        })</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
